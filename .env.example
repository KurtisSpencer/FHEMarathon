# ========================================
# Network Configuration
# ========================================

# Sepolia Testnet RPC URL
SEPOLIA_RPC_URL=https://ethereum-sepolia-rpc.publicnode.com

# Alternative RPC URLs (uncomment to use)
# SEPOLIA_RPC_URL=https://rpc.sepolia.org
# SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY

# Mainnet RPC URL (for production)
# MAINNET_RPC_URL=https://ethereum-rpc.publicnode.com

# Local development
LOCALHOST_RPC_URL=http://127.0.0.1:8545

# ========================================
# Private Keys & Accounts
# ========================================

# Deployer Private Key (NEVER commit your real private key!)
# Get this from MetaMask: Account Details -> Export Private Key
PRIVATE_KEY=your_private_key_here

# Organizer Account (if different from deployer)
ORGANIZER_PRIVATE_KEY=your_organizer_private_key_here

# Pauser Role Account (for emergency pause functionality)
PAUSER_PRIVATE_KEY=your_pauser_private_key_here

# Multi-sig Wallet Address (for production)
MULTISIG_ADDRESS=

# ========================================
# API Keys
# ========================================

# Etherscan API Key for contract verification
# Get from: https://etherscan.io/myapikey
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Infura Project ID (optional)
INFURA_API_KEY=your_infura_project_id_here

# Alchemy API Key (optional)
ALCHEMY_API_KEY=your_alchemy_api_key_here

# CoinMarketCap API Key (for gas reporter)
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# ========================================
# Contract Addresses
# ========================================

# Main contract address (filled after deployment)
CONTRACT_ADDRESS=

# Proxy contract address (if using proxy pattern)
PROXY_ADDRESS=

# Implementation contract address
IMPLEMENTATION_ADDRESS=

# ========================================
# Testing & Development
# ========================================

# Enable gas reporting during tests
REPORT_GAS=false

# Gas price (in gwei) for deployment
GAS_PRICE=

# Gas limit for transactions
GAS_LIMIT=

# Network for testing
NETWORK=localhost

# Enable debug mode
DEBUG=false

# Test account mnemonic (for local testing only)
TEST_MNEMONIC=test test test test test test test test test test test junk

# ========================================
# Security Configuration
# ========================================

# Pauser Role Settings
PAUSER_ENABLED=true
PAUSER_ADDRESS=

# Emergency Contact
EMERGENCY_CONTACT_EMAIL=

# Security Notification Webhook
SECURITY_WEBHOOK_URL=

# Maximum transaction value (in ETH)
MAX_TRANSACTION_VALUE=10

# Rate limiting (transactions per hour)
RATE_LIMIT_PER_HOUR=100

# ========================================
# Performance Optimization
# ========================================

# Compiler optimization runs (200-1000 recommended)
OPTIMIZER_RUNS=200

# Enable via-IR compilation
ENABLE_VIA_IR=true

# Code splitting enabled
CODE_SPLITTING=true

# ========================================
# Monitoring & Analytics
# ========================================

# Sentry DSN for error tracking
SENTRY_DSN=

# Analytics API endpoint
ANALYTICS_ENDPOINT=

# Metrics collection interval (seconds)
METRICS_INTERVAL=60

# ========================================
# CI/CD Configuration
# ========================================

# Codecov token for coverage reports
CODECOV_TOKEN=

# GitHub token for automated workflows
GITHUB_TOKEN=

# Deployment environment (development, staging, production)
DEPLOYMENT_ENV=development

# Auto-deploy enabled
AUTO_DEPLOY=false

# ========================================
# Feature Flags
# ========================================

# Enable registration feature
FEATURE_REGISTRATION=true

# Enable leaderboard feature
FEATURE_LEADERBOARD=true

# Enable prize distribution
FEATURE_PRIZES=true

# Enable emergency pause
FEATURE_EMERGENCY_PAUSE=true

# ========================================
# Smart Contract Parameters
# ========================================

# Default registration fee (in wei)
DEFAULT_REGISTRATION_FEE=1000000000000000

# Maximum participants per marathon
MAX_PARTICIPANTS=10000

# Minimum registration time before event (hours)
MIN_REGISTRATION_TIME=24

# Maximum marathon duration (hours)
MAX_MARATHON_DURATION=24

# ========================================
# Database Configuration (if using)
# ========================================

# Database URL
DATABASE_URL=

# Redis URL (for caching)
REDIS_URL=

# ========================================
# Frontend Configuration
# ========================================

# Frontend URL
FRONTEND_URL=https://anonymous-marathon.vercel.app

# API URL
API_URL=

# WebSocket URL
WS_URL=

# ========================================
# Email & Notifications
# ========================================

# SendGrid API Key
SENDGRID_API_KEY=

# Email sender address
EMAIL_FROM=noreply@anonymous-marathon.com

# Notification webhook
NOTIFICATION_WEBHOOK=

# ========================================
# Logging
# ========================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log file path
LOG_FILE=logs/app.log

# Enable console logging
CONSOLE_LOGS=true

# ========================================
# Notes
# ========================================

# 1. Copy this file to .env and fill in your actual values
# 2. NEVER commit .env file to version control
# 3. Keep your private keys secure and never share them
# 4. Use different keys for development and production
# 5. Consider using a hardware wallet for production deployments
# 6. Rotate API keys regularly
# 7. Use environment-specific .env files (.env.development, .env.production)
